= form_for(@organisation) do |f|
  - if @organisation.errors.any?
    #error_explanation
      %h2
        = pluralize(@organisation.errors.count, "error")
        prohibited this organisation from being saved:
      %ul
        - @organisation.errors.full_messages.each do |message|
          %li= message
  .field
    = image_tag(@organisation.logo.url, alt: 'Image') if @organisation.logo
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :logo
    %br/
    = f.file_field :logo
  .actions
    = f.submit
